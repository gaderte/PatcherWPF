<Window x:Name="Patcher" x:Class="PatcherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatcherWPF"
        mc:Ignorable="d" Height="480" Width="750" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None"
        Loaded="MainWindow_Load" MouseDown="Window_MouseDown">
    <Canvas x:Name="CanvasPrincipal" HorizontalAlignment="Left" Width="750" RenderTransformOrigin="0.5,0.738" Height="480" VerticalAlignment="Top">
        <Image x:Name="picLogo" Height="135" Canvas.Left="20" Canvas.Top="20" Width="135" Source="sylia_logo.png"/>
        <ProgressBar x:Name="barAvAct" Height="10" Canvas.Left="74" Canvas.Top="404" Width="600" Foreground="#FF0615B0"/>
        <ProgressBar x:Name="barAvTot" Height="10" Canvas.Left="74" Canvas.Top="430" Width="600" Foreground="Lime"/>
        <Button x:Name="startBtn" Content="Start" Canvas.Left="310" Canvas.Top="329" Width="130" Height="50" IsEnabled="False" HorizontalAlignment="Center" Click="startBtn_Click"/>
        <Button x:Name="optionsBtn" Content="Options" Canvas.Left="336" Canvas.Top="460" Width="76" Click="optionsBtn_Click"/>
        <Label x:Name="filesLeft" Content="1/1" Canvas.Left="359" Canvas.Top="408"/>
        <Button x:Name="quitButton" Content="X" Canvas.Left="710" Canvas.Top="20" Width="20" Click="quitOnClick"/>
        <Button x:Name="discordBtn" Content="Discord" Canvas.Left="657" Canvas.Top="212" Width="75" Click="discordBtn_Click"/>
        <Button x:Name="siteWebBtn" Content="Site Web" Canvas.Left="657" Canvas.Top="252" Width="75" Click="siteWebBtn_Click"/>
    </Canvas>
</Window>
